{
  "info": {
    "name": "TerraHerb API",
    "_postman_id": "5bff5d6a-91af-4a9d-89ce-2ff7df6a3d63",
    "description": "Collection for TerraHerb /api/v1 endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/health"
      }
    },
    {
      "name": "Metrics",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/metrics"
      }
    },
    {
      "name": "Auth Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 200) {",
              "  const payload = pm.response.json();",
              "  pm.collectionVariables.set('accessToken', payload.access_token);",
              "  pm.collectionVariables.set('refreshToken', payload.refresh_token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth Refresh",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/auth/refresh"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 200) {",
              "  const payload = pm.response.json();",
              "  pm.collectionVariables.set('accessToken', payload.access_token);",
              "  pm.collectionVariables.set('refreshToken', payload.refresh_token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Plants Search",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/v1/plants?q=tulsi&page=1&limit=20"
      }
    },
    {
      "name": "Plants By Season",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/v1/plants/by-season?season=monsoon&region_code=IN-KA&month=7"
      }
    },
    {
      "name": "Plants By Climate Zone",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/v1/plants/by-climate-zone?climate_zone=tropical_wet&region_code=IN-KA"
      }
    },
    {
      "name": "Plant Detail",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": "{{baseUrl}}/api/v1/plants/1"
      }
    }
  ]
}
